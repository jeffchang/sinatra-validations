<div class='container'>

  <h2>Create a new event!</h2>
    
  <form action="/events/create" method="post">
    <h3>Event title</h3>
    <input type="text" name="organizer_title" size="60" required />

    <h3>Organizer name</h3>
    <input type="text" name="organizer_name" size="40" value="<%= @organizer %>" required />

    <h3>Your email address</h3>
    <input type="email" name="organizer_email" size="40" value="<%= @email %>" required />

    <h3>Description</h3>
    <input type="text" name="description" size="40" placeholder="Describe your event!" />

    <h3>Select a date!</h3>
    <input type="text" id="datepick" name="date" size="50" required />

    <h3>Pick a time!</h3>
    <input type="text" name="time" size="50" placeholder="any format is fine" required />
  </form>

  <input type="submit" value="Create an event!" />
</div>
